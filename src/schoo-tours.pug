extends layout

block title
  title shgtkshruch - schoo tours

block body
  header.header
    h2.header__title schoo tours
    // a(href="http://shgtkshruch.github.io/schoo-tours/" target="_blank") Site

  .screenshot.screenshot--schoo-tours
    .l-container.screenshot__container
      .screenshot__img
        img(src="images/schoo-tours/screenshot.jpg" alt="screenshot")
      .screenshot__points
        - var points = [];
        - points[0] = {title: 'スライドショー', text: 'プラグインを用いずにスライドショーの実装を行いました。'};
        - points[1] = {title: 'SVGアニメーション', text: 'SVGのラインアニメーションと共にアイコンが浮き出てくる動きを作りました。Lazy Line Painterを用いました。'};
        - points[2] = {title: 'ライトボックス', text: '画像のクリックすると上品なアニメーションと共にライトボックスが開きます。こちらもプラグインを用いずに実装しました。'};
        - points[3] = {title: 'google map', text: 'サイトのデザインにマッチするように、google mapの配色をカスタマイズしてデザインを調和させました。またスクロールしてくると、マップのピンが上から落ちてくるアニメーションも加えました。'};

        each point in points
          .screenshot__point.js-point
            .screenshot__desc
              p.screenshot__text= point.text
